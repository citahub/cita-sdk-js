{
  "short_name": "NeuronWeb",
  "name": "Neuron Web",
  "icons": {
    "48": "favicon.png"
  },
  "browser_action": {
    "default_popup": "./index.html#/transactions",
    "default_title": "NeuronWeb"
  },
  "manifest_version": 2,
  "version": "1.0",
  "permissions": [
    "tabs",
    "activeTab",
    "clipboardWrite",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "bundle.js",
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": [
      "bundle.js",
      "contentscript.js"
    ],
    "run_at": "document_end"
  }],
  "web_accessible_resources": ["/bundle.js", "/inject.js"]
}
